<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f1eeee"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f5f4f4"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:textColor="@color/colorPrimaryDark">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/corp_jobs" />

                <EditText
                    android:id="@+id/searchView"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="41dp"
                    android:background="@color/colorWhite"
                    android:drawableRight="@drawable/ic_search_black_24dp"
                    android:drawablePadding="10dp"
                    android:drawableTint="#3d3c3c"
                    android:hint="Job Title, Company, Location"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp" />

            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="2dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="1dp">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="2dp"
                    android:text="Browse by Categories"
                    android:textColor="@color/textColorBlack"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:background="#eae8e8" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:id="@+id/offCampus"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/freshers_jobs_img"
                            android:layout_width="@dimen/category_img_size"
                            android:layout_height="@dimen/category_img_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:contentDescription="@string/app_name"
                            app:srcCompat="@drawable/ic_fresher" />

                        <TextView
                            android:id="@+id/freshers_jobs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="Freshers"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"
                        android:background="#eae8e8" />

                    <LinearLayout
                        android:id="@+id/coreEngg"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/engg_job_img"
                            android:layout_width="@dimen/category_img_size"
                            android:layout_height="@dimen/category_img_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/ic_engineer" />

                        <TextView
                            android:id="@+id/engg_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="Engineering"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"
                        android:background="#eae8e8" />

                    <LinearLayout
                        android:id="@+id/itJobs"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/software_job_img"
                            android:layout_width="@dimen/category_img_size"
                            android:layout_height="@dimen/category_img_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/ic_software" />

                        <TextView
                            android:id="@+id/software_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="Software"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginBottom="2dp"
                        android:background="#eae8e8" />

                    <LinearLayout
                        android:id="@+id/govtJobs"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/education_job_img"
                            android:layout_width="@dimen/category_img_size"
                            android:layout_height="@dimen/category_img_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/id_education" />

                        <TextView
                            android:id="@+id/education_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="Education"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="115dp"
                    android:background="#eae8e8" />
                <!-- Second Row-->
                <LinearLayout
                    android:id="@+id/bankJobs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="120dp"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/bank_job_img"
                            android:layout_width="@dimen/category_img_size"
                            android:layout_height="@dimen/category_img_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/ic_bank" />

                        <TextView
                            android:id="@+id/bank_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="Bank"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#eae8e8" />

                    <LinearLayout
                        android:id="@+id/itesJobs"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/ites_job_img"
                            android:layout_width="@dimen/category_img_size"
                            android:layout_height="@dimen/category_img_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/ic_bpo" />

                        <TextView
                            android:id="@+id/ites_job"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="ITES/BPO"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#eae8e8" />

                    <LinearLayout
                        android:id="@+id/medicalJobs"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/mgmt_jobs_img"
                            android:layout_width="@dimen/category_img_size"
                            android:layout_height="@dimen/category_img_size"
                            android:layout_gravity="center"
                            android:layout_marginTop="5dp"
                            app:srcCompat="@drawable/ic_management" />

                        <TextView
                            android:id="@+id/mgmt_jobs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:text="Management"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#eae8e8" />

                    <LinearLayout
                        android:id="@+id/moreJobs"
                        android:layout_width="0dp"
                        android:layout_height="90dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackground"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/more_jobs_img"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            app:srcCompat="@drawable/ic_more" />

                        <TextView
                            android:id="@+id/more_jobs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:padding="5dp"
                            android:text="More"
                            android:textAlignment="center"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/category_text_size" />
                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="200dp"
                    android:background="#eae8e8" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="20dp"
                android:scrollbars="none" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
