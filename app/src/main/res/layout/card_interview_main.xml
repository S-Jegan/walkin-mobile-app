<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/textColorWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.94"
                    android:padding="@dimen/cardTextTitlePadding"
                    android:text="Amazon India Pvt Ltd"
                    android:textColor="@color/textColorBlack"
                    android:textSize="@dimen/cardTextTitle" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/myView"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="80dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="5dp"
                        app:srcCompat="@drawable/ic_verified_fkt" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="0.98"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            app:srcCompat="@drawable/ic_designation" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                            android:text="Software Developer"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/cardTextSubTitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            app:srcCompat="@drawable/ic_location" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                            android:text="Bangalore"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/cardTextSubTitle" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            app:srcCompat="@drawable/ic_qualification" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                            android:text="B.E/B.Tech (ECE,IT,CIVIL)"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/cardTextSubTitle" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView32"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            app:srcCompat="@drawable/ic_experience" />

                        <TextView
                            android:id="@+id/textView62"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                            android:text="0 - 1 Year"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/cardTextSubTitle" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            app:srcCompat="@drawable/ic_calendar" />

                        <!-- <TextView
                             android:id="@+id/textView7"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"
                             android:layout_weight="0.06"
                             android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                             android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                             android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                             android:text="Date:"
                             android:textColor="@color/textColorBlack"
                             android:textSize="@dimen/cardTextSubTitle" />-->

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                            android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                            android:paddingBottom="@dimen/cardTextSubTitle"
                            android:layout_weight="1"
                            android:text="21-May-2018"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/cardTextSubTitle" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <!--  <ImageView
                          android:layout_width="99dp"
                          android:layout_height="81dp"
                          android:layout_gravity="top"
                          app:srcCompat="@drawable/logo_rbs"
                          android:id="@+id/imageView5" />-->

                    <com.android.volley.toolbox.NetworkImageView
                        android:id="@+id/imageView5"
                        android:layout_width="115dp"
                        android:layout_height="70dp"
                        android:layout_gravity="left"
                        android:src="@drawable/ic_shutter" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:layout_marginTop="5dp"
                        android:paddingRight="10dp"
                        android:layout_marginRight="5dp"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="TextView" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:paddingRight="10dp"
                        android:layout_marginRight="5dp"
                        android:maxLines="1"
                        android:layout_height="wrap_content"
                        android:text="TextView" />

                    <!--                    <ImageView
                                            android:id="@+id/imageView6"
                                            android:layout_width="match_parent"
                                            android:gravity="end"
                                            android:layout_marginTop="5dp"
                                            android:layout_marginLeft="80dp"
                                            android:layout_height="wrap_content"
                                            app:srcCompat="@drawable/ic_favorite_border_black_24dp" />-->

                    <com.like.LikeButton
                        android:id="@+id/likeButton1"
                        android:layout_width="match_parent"
                        android:gravity="end"
                        android:layout_marginLeft="80dp"
                        app:icon_size="25dp"
                        app:icon_type="heart"
                        app:like_drawable="@drawable/ic_favorite_black_24dp"
                        app:unlike_drawable="@drawable/ic_favorite_border_black_24dp"
                        app:dots_primary_color="@color/colorAccent"
                        app:dots_secondary_color="@color/colorPrimary"
                        android:layout_height="wrap_content"
                        app:circle_end_color="@color/colorAccent"
                        app:anim_scale_factor="2"/>

                    <!-- app:srcCompat="@drawable/ic_default_image"-->

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>