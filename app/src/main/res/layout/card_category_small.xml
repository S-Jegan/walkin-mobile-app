<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="150dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_category_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/category_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/jobs_cover_height"
                android:src="@drawable/ic_logistics"
                android:padding="15dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/category_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/category_thumbnail"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:paddingLeft="@dimen/jobs_title_padding"
                android:paddingRight="@dimen/jobs_title_padding"
                android:paddingBottom="@dimen/jobs_title_padding"
                android:textColor="@color/textColorBlack"
                android:text="Logistics"
                android:textSize="@dimen/jobs_title" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>