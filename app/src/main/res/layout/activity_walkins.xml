<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:shimmer="http://schemas.android.com/tools"
    android:fitsSystemWindows="true">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/shimmer_view_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        shimmer:duration="800">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <include layout="@layout/placeholder_walkin_details" />
        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/mainLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:weightSum="1"
            android:background="#dadada">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:padding="5dp"
                app:cardBackgroundColor="@color/textColorWhite">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="287dp"
                            android:layout_weight="0.94"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/cardTextTitlePadding"
                            android:text="Amazon India Pvt Ltd"
                            android:textColor="@color/textColorBlack"
                            android:textSize="@dimen/cardTextTitle" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/myView"
                            android:orientation="horizontal">
                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/ic_verified_fkt" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="0.98"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    app:srcCompat="@drawable/ic_designation" />

                                <TextView
                                    android:id="@+id/textView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                                    android:text="Software Developer"
                                    android:textColor="@color/textColorBlack"
                                    android:textSize="@dimen/cardTextSubTitle" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    app:srcCompat="@drawable/ic_location" />

                                <TextView
                                    android:id="@+id/textView5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                                    android:text="Bangalore"
                                    android:textColor="@color/textColorBlack"
                                    android:textSize="@dimen/cardTextSubTitle" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    app:srcCompat="@drawable/ic_qualification" />

                                <TextView
                                    android:id="@+id/textView6"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                                    android:text="B.E/B.Tech (ECE,IT,CIVIL)"
                                    android:textColor="@color/textColorBlack"
                                    android:textSize="@dimen/cardTextSubTitle" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView32"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    app:srcCompat="@drawable/ic_experience" />

                                <TextView
                                    android:id="@+id/textView62"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    android:paddingBottom="@dimen/cardTextSubTitlePaddingBottom"
                                    android:text="0 - 1 Year"
                                    android:textColor="@color/textColorBlack"
                                    android:textSize="@dimen/cardTextSubTitle" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageView4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    app:srcCompat="@drawable/ic_calendar" />

                                <TextView
                                    android:id="@+id/textView8"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="21-May-2018"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingBottom"
                                    android:textColor="@color/textColorBlack"
                                    android:textSize="@dimen/cardTextSubTitle" />
                            </LinearLayout>

                            <!-- Added For Salary-->

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/salImg"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    app:srcCompat="@drawable/ic_salary" />

                                <TextView
                                    android:id="@+id/salaryTxt"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="Not Disclosed"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingBottom"
                                    android:textColor="@color/textColorBlack"
                                    android:textSize="@dimen/cardTextSubTitle" />
                            </LinearLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewSkills"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingTop"
                                    app:srcCompat="@drawable/ic_skills_black_24dp" />

                                <TextView
                                    android:id="@+id/textViewSkills"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="No specific skills"
                                    android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                                    android:paddingTop="@dimen/cardTextSubTitlePaddingBottom"
                                    android:paddingBottom="@dimen/cardTextSubTitle"
                                    android:textColor="@color/textColorBlack"
                                    android:textSize="@dimen/cardTextSubTitle" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="130dp"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <com.android.volley.toolbox.NetworkImageView
                                android:id="@+id/imageView5"
                                android:layout_width="115dp"
                                android:layout_height="70dp"
                                android:layout_gravity="left"
                                android:src="@drawable/ic_shutter" />
                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:gravity="end"
                                android:paddingRight="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="TextView" />

                            <TextView
                                android:id="@+id/textView99"
                                android:layout_width="match_parent"
                                android:gravity="end"
                                android:paddingRight="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:text="TextView" />

                            <!--   <ImageView
                                   android:id="@+id/imageView6"
                                   android:layout_width="match_parent"
                                   android:gravity="end"
                                   android:layout_marginTop="5dp"
                                   android:layout_marginLeft="80dp"
                                   android:layout_height="wrap_content"
                                   app:srcCompat="@drawable/ic_favorite_border_black_24dp" />
       -->
                            <com.like.LikeButton
                                android:id="@+id/likeButton1"
                                android:layout_width="match_parent"
                                android:gravity="end"
                                android:layout_marginTop="40dp"
                                android:layout_marginLeft="80dp"
                                app:icon_size="25dp"
                                app:icon_type="heart"
                                app:like_drawable="@drawable/ic_favorite_black_24dp"
                                app:unlike_drawable="@drawable/ic_favorite_border_black_24dp"
                                app:dots_primary_color="@color/colorAccent"
                                app:dots_secondary_color="@color/colorPrimary"
                                android:layout_height="wrap_content"
                                app:circle_end_color="@color/colorAccent"
                                app:liked="false"
                                app:anim_scale_factor="2"/>

                            <!-- app:srcCompat="@drawable/ic_default_image"-->

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                android:visibility="gone"
                ads:adUnitId="@string/banner_interview_details"
                android:layout_centerHorizontal="true">
            </com.google.android.gms.ads.AdView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Job Description"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitleInterview"
                        android:textStyle="bold"
                        android:paddingTop="@dimen/cardTextTitlePadding"
                        android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                        android:paddingBottom="@dimen/cardTextSubTitlePaddingLeft"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#e7e6e6"/>

                    <TextView
                        android:text="Dungeons Dragons is a studio album by American musical group Midnight Syndicate, released in 2003 by Entity Productions. The album is designed as a soundtrack for Wizards of the Coast's "
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitle"
                        android:textIsSelectable="true"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Walkin Location"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitleInterview"
                        android:textStyle="bold"
                        android:paddingTop="@dimen/cardTextTitlePadding"
                        android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                        android:paddingBottom="@dimen/cardTextSubTitlePaddingLeft"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView10" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#e7e6e6"/>

                    <TextView
                        android:text="Dungeons Dragons is a studio album by American musical group Midnight Syndicate, released in 2003 by Entity Productions. The album is designed as a soundtrack for Wizards of the Coast's "
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitle"
                        android:textIsSelectable="true"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView12" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Contact Details"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitleInterview"
                        android:textStyle="bold"
                        android:paddingTop="@dimen/cardTextTitlePadding"
                        android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                        android:paddingBottom="@dimen/cardTextSubTitlePaddingLeft"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView17" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#e7e6e6"/>

                    <TextView
                        android:text="Dungeons Dragons is a studio album by American musical group Midnight Syndicate, released in 2003 by Entity Productions. The album is designed as a soundtrack for Wizards of the Coast's "
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitle"
                        android:textIsSelectable="true"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView18" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/card_others"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:id="@+id/linearOthers"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="Other Information"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitleInterview"
                        android:textStyle="bold"
                        android:paddingTop="@dimen/cardTextTitlePadding"
                        android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                        android:paddingBottom="@dimen/cardTextSubTitlePaddingLeft"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView15" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#e7e6e6"/>

                    <TextView
                        android:text="Dungeons Dragons is a studio album by American musical group Midnight Syndicate, released in 2003 by Entity Productions. The album is designed as a soundtrack for Wizards of the Coast's "
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitle"
                        android:padding="10dp"
                        android:textIsSelectable="true"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView16" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.google.android.gms.ads.AdView
                android:id="@+id/adView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                ads:adSize="BANNER"
                android:visibility="gone"
                ads:adUnitId="@string/banner_interview_details_bottom"
                android:layout_centerHorizontal="true">
            </com.google.android.gms.ads.AdView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_margin="8dp"
                android:padding="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="About the Company"
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitleInterview"
                        android:textStyle="bold"
                        android:paddingTop="@dimen/cardTextTitlePadding"
                        android:paddingLeft="@dimen/cardTextSubTitlePaddingLeft"
                        android:paddingBottom="@dimen/cardTextSubTitlePaddingLeft"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView13" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#e7e6e6"/>
                    <TextView
                        android:text="Dungeons Dragons is a studio album by American musical group Midnight Syndicate, released in 2003 by Entity Productions. The album is designed as a soundtrack for Wizards of the Coast's "
                        android:textColor="@color/textColorBlack"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/cardTextSubTitle"
                        android:textIsSelectable="true"
                        android:padding="10dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView14" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/my_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:scrollbars="none" />

        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:backgroundTint="@color/bgColorVerified"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_action_name" />

</android.support.design.widget.CoordinatorLayout>


